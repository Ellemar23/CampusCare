<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Health Information"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <!-- Reusable Section Template for each field -->
        <!-- BLOOD TYPE -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Blood Type" android:textSize="15sp" android:textStyle="bold"
            android:layout_marginBottom="6dp" />
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@drawable/field_background" android:padding="10dp"
            android:layout_marginBottom="16dp">
            <EditText android:id="@+id/edt_blood_group" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:hint="" android:background="@android:color/transparent"
                android:enabled="false" android:textSize="16sp" android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </LinearLayout>

        <!-- HEIGHT -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Height" android:textSize="15sp" android:textStyle="bold"
            android:layout_marginBottom="6dp" />
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@drawable/field_background" android:padding="10dp"
            android:layout_marginBottom="16dp">
            <EditText android:id="@+id/edt_height" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@android:color/transparent"
                android:enabled="false" android:textSize="16sp" android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </LinearLayout>

        <!-- WEIGHT -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Weight" android:textSize="15sp" android:textStyle="bold"
            android:layout_marginBottom="6dp" />
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@drawable/field_background" android:padding="10dp"
            android:layout_marginBottom="16dp">
            <EditText android:id="@+id/edt_weight" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@android:color/transparent"
                android:enabled="false" android:textSize="16sp" android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </LinearLayout>

        <!-- ALLERGIES -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Allergies" android:textSize="15sp" android:textStyle="bold"
            android:layout_marginBottom="6dp" />
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@drawable/field_background" android:padding="10dp"
            android:layout_marginBottom="16dp">
            <EditText android:id="@+id/edt_allergies" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@android:color/transparent"
                android:enabled="false" android:textSize="16sp" android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </LinearLayout>

        <!-- CONDITIONS -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Conditions" android:textSize="15sp" android:textStyle="bold"
            android:layout_marginBottom="6dp" />
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@drawable/field_background" android:padding="10dp"
            android:layout_marginBottom="16dp">
            <EditText android:id="@+id/edt_conditions" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@android:color/transparent"
                android:enabled="false" android:textSize="16sp" android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </LinearLayout>

        <!-- MEDICATIONS -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Medications" android:textSize="15sp" android:textStyle="bold"
            android:layout_marginBottom="6dp" />
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@drawable/field_background" android:padding="10dp"
            android:layout_marginBottom="16dp">
            <EditText android:id="@+id/edt_medications" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@android:color/transparent"
                android:enabled="false" android:textSize="16sp" android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </LinearLayout>

        <!-- LAST CHECKUP -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Last Checkup Date" android:textSize="15sp" android:textStyle="bold"
            android:layout_marginBottom="6dp" />
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@drawable/field_background" android:padding="10dp"
            android:layout_marginBottom="16dp">
            <EditText android:id="@+id/edt_checkup_date" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@android:color/transparent"
                android:enabled="false" android:textSize="16sp" android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </LinearLayout>

        <!-- EMERGENCY CONTACT -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Emergency Contact" android:textSize="15sp" android:textStyle="bold"
            android:layout_marginBottom="6dp" />
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@drawable/field_background" android:padding="10dp"
            android:layout_marginBottom="24dp">
            <EditText android:id="@+id/edt_emergency_contact" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@android:color/transparent"
                android:enabled="false" android:textSize="16sp" android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </LinearLayout>

        <!-- BUTTON -->
        <Button
            android:id="@+id/edit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="16sp"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />
    </LinearLayout>
</ScrollView>
