<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_blood_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blood Type" />

        <EditText
            android:id="@+id/edt_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Height" />

        <EditText
            android:id="@+id/edt_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Weight" />

        <EditText
            android:id="@+id/edt_allergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Allergies" />

        <EditText
            android:id="@+id/edt_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Conditions" />

        <EditText
            android:id="@+id/edt_medications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medications" />

        <EditText
            android:id="@+id/edt_checkup_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="Last Checkup Date" />

        <EditText
            android:id="@+id/edt_emergency_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Emergency Contact" />

        <Button
            android:id="@+id/btn_save_health_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
