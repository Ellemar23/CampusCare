<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="Add Medical History"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Name"
            android:background="@drawable/edit_text_rounded"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etPastDiagnoses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Past Diagnoses"
            android:background="@drawable/edit_text_rounded"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etPreviousSurgeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Previous Surgeries"
            android:background="@drawable/edit_text_rounded"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etChronicConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Chronic Conditions"
            android:background="@drawable/edit_text_rounded"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etHospitalizations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Hospitalizations"
            android:background="@drawable/edit_text_rounded"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etAllergies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Allergies"
            android:background="@drawable/edit_text_rounded"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etMedicationsHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Medications History"
            android:background="@drawable/edit_text_rounded"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etVaccinationRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Vaccination Records"
            android:background="@drawable/edit_text_rounded"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etFamilyMedicalHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Family Medical History"
            android:background="@drawable/edit_text_rounded"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etLifestyleFactors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Lifestyle Factors"
            android:background="@drawable/edit_text_rounded"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etDoctorNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Doctor Notes"
            android:background="@drawable/edit_text_rounded"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etLabTestResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:hint="Lab Test Results"
            android:background="@drawable/edit_text_rounded"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:padding="12dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveMedicalHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#000000"
            android:text="Save Medical History"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
