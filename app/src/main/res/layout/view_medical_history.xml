<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="#A4C8F0"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title -->
            <TextView
                android:id="@+id/personal_info_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Medical History"
                android:textColor="#212121"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Date Created -->
            <TextView
                android:id="@+id/tvDateCreated_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Created:"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/personal_info_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvDateCreated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/tvDateCreated_label"
                app:layout_constraintStart_toEndOf="@id/tvDateCreated_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

            <!-- Name -->
            <TextView
                android:id="@+id/tvName_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvDateCreated_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/tvName_label"
                app:layout_constraintStart_toEndOf="@id/tvName_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

            <!-- Past Diagnoses -->
            <TextView
                android:id="@+id/tvPastDiagnoses_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Past Diagnoses:"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvName_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvPastDiagnoses"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/tvPastDiagnoses_label"
                app:layout_constraintStart_toEndOf="@id/tvPastDiagnoses_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

            <!-- Previous Surgeries -->
            <TextView
                android:id="@+id/tvPreviousSurgeries_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous Surgeries:"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvPastDiagnoses_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvPreviousSurgeries"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/tvPreviousSurgeries_label"
                app:layout_constraintStart_toEndOf="@id/tvPreviousSurgeries_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

            <!-- Chronic Conditions -->
            <TextView
                android:id="@+id/tvChronicConditions_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chronic Conditions:"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvPreviousSurgeries_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvChronicConditions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/tvChronicConditions_label"
                app:layout_constraintStart_toEndOf="@id/tvChronicConditions_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

            <!-- Hospitalizations -->
            <TextView
                android:id="@+id/tvHospitalizations_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospitalizations:"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvChronicConditions_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvHospitalizations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/tvHospitalizations_label"
                app:layout_constraintStart_toEndOf="@id/tvHospitalizations_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

            <!-- Allergies -->
            <TextView
                android:id="@+id/tvAllergies_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allergies:"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvHospitalizations_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvAllergies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/tvAllergies_label"
                app:layout_constraintStart_toEndOf="@id/tvAllergies_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

            <!-- Medications History -->
            <TextView
                android:id="@+id/tvMedicationsHistory_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medications History:"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvAllergies_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvMedicationsHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/tvMedicationsHistory_label"
                app:layout_constraintStart_toEndOf="@id/tvMedicationsHistory_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

            <!-- Vaccination Records -->
            <TextView
                android:id="@+id/tvVaccinationRecords_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaccination Records:"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvMedicationsHistory_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvVaccinationRecords"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/tvVaccinationRecords_label"
                app:layout_constraintStart_toEndOf="@id/tvVaccinationRecords_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

            <!-- Family Medical History -->
            <TextView
                android:id="@+id/tvFamilyMedicalHistory_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family Medical History:"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvVaccinationRecords_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvFamilyMedicalHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/tvFamilyMedicalHistory_label"
                app:layout_constraintStart_toEndOf="@id/tvFamilyMedicalHistory_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

            <!-- Lifestyle Factors -->
            <TextView
                android:id="@+id/tvLifestyleFactors_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lifestyle Factors:"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvFamilyMedicalHistory_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvLifestyleFactors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/tvLifestyleFactors_label"
                app:layout_constraintStart_toEndOf="@id/tvLifestyleFactors_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

            <!-- Doctor Notes -->
            <TextView
                android:id="@+id/tvDoctorNotes_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor Notes:"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvLifestyleFactors_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvDoctorNotes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/tvDoctorNotes_label"
                app:layout_constraintStart_toEndOf="@id/tvDoctorNotes_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

            <!-- Lab Test Results -->
            <TextView
                android:id="@+id/tvLabTestResults_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lab Test Results:"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvDoctorNotes_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvLabTestResults"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/tvLabTestResults_label"
                app:layout_constraintStart_toEndOf="@id/tvLabTestResults_label"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

            <!-- Buttons Row -->
            <LinearLayout
                android:id="@+id/buttonRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvLabTestResults_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <Button
                    android:id="@+id/delete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete"
                    android:textColor="#FFF"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/black"
                    android:padding="12dp"
                    />

                <Button
                    android:id="@+id/update"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="12dp"
                    android:text="Update"
                    android:textColor="#FFF" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BottomNavigationView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconSize="30dp"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/menu" />
</androidx.constraintlayout.widget.ConstraintLayout>
